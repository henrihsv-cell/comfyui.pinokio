{
  "daemon": true,
  "run": [{
    "method": "shell.run",
    "params": {
      "venv": "env",
      "path": "ComfyUI",
      "env": {
        "PYTORCH_MPS_HIGH_WATERMARK_RATIO": "0.0",
        "PYTORCH_ENABLE_MPS_FALLBACK": "1"
      },
      "message": "{{platform === 'win32' && gpu === 'amd' ? 'python main.py --directml' : 'python main.py'}}",
      "on": [{
        "event": "/(http:\\/\\/[0-9.:]+)/",
        "done": true
      }, {
        "event": "/errno/i",
        "break": false
      }, {
        "event": "/error:/i",
        "break": false
      }]
    }
  }, {
    "method": "local.set",
    "params": {
      "url": "{{input.event[1]}}"
    }
  }]
}
